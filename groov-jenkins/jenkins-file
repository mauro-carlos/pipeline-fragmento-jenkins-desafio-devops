pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                git url: 'https://github.com/torneseumprogramador/pipeline-fragmento-jenkins-desafio-devops.git', branch: 'main'
                sh 'cd /var/lib/jenkins/workspace/pipeline-infra-fragmento/contruindo_ambiente && ./deploy.sh'
            }
        }
        stage('TEST') {
            steps {
                echo 'Fazendo teste da imagem'
            }
        }
        stage('Criando AMI customizada') {
            steps {
                echo 'Gerando AMI'
            }
        }
        stage('Destruir ambiente') {
            steps {
                echo 'destruindo'
            }
        }
    }
}
